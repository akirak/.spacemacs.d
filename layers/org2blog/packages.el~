(setq org2blog-packages
      (org2blog :location (recipe
                           :fetcher github
                           :repo "org2blog/org2blog"))
      )

(defun akirak-web/init-org2blog
    (spacemacs|use-package-add-hook org2blog
      :post-init
      (progn
        (require 'org2blog-autoloads)
        (add-hook 'org-mode-hook #'org2blog/wp-org-mode-hook-fn)
        )
      ))
